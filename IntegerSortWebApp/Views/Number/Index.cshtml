@model IEnumerable<Number>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
        <div>
        <div><a asp-controller="Number" asp-action="AddNumber" class="btn btn-primary">Add</a></div>
        <div><a asp-controller="Number" asp-action="DeleteDatabase" class="btn btn-primary">Remove</a></div>
        <div><a asp-controller="Number" asp-action="SortAscending" class="btn btn-primary">Ascending</a></div>
        <div><a asp-controller="Number" asp-action="SortDescending" class="btn btn-primary">Descending</a></div>
        <div><a asp-controller="Number" asp-action="ExportJSON" class="btn btn-primary">Export JSON</a></div>
        </div>
</div>

<h2 class="text-primary">Add Number Sequence</h2>

<h2 class="text-primary">Numbers Table</h2>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Number
            </th>
            <th>
                Sort Time (ms)
            </th>
            <th>
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {

             <tr>
                 <td width="50%">
                     @obj.Integer
                 </td>

                     <td width="30%">
                     @obj.SortPerformance.SortTime
                 </td>
                 <td>
                    <div><a asp-route-id=@obj.Id value="Remove" asp-controller="Number" asp-action="RemoveNumber" class="btn btn-primary">Remove</a></div>
                 </td>

             </tr>
        }
    </tbody>


</table>